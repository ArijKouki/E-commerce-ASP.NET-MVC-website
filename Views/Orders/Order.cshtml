@{
    Order order = (Order)ViewData["order"];
}

@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger ">
        <span><b>Sorry!</b> - @TempData["Error"] </span>
    </div>
}
else{
    <div style="display:flex;justify-content:center">
        <div class="card border-success  mb-3 text-center " style="max-width: 35rem;margin:2%;color:limegreen">
        <div class="card-header border-success">
            <h1 >Order processed successfully !</h1>
        </div>
        <div class="card-body">
                <h5 class="card-title" style="color:limegreen">Your order will be soon delivered.</h5>
            <p class="card-text"> You will pay <b>@order.Total $ </b> at delivery. </p>
        </div>
    </div>
    </div>
}
